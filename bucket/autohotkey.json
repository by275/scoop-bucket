                ],
                "compiler\\ahk2exe.exe"
            ],
            "post_install": [
                "Copy-Item \"$dir\\Compiler\\Unicode 32-bit.bin\" \"$dir\\Compiler\\AutoHotkeySC.bin\""
            ]
        }
    },
    "pre_install": [
        "ForEach ($emptyFile in $manifest.persist | Where-Object { $_ -ne 'Lib' }) {New-Item \"$dir\\$emptyFile\" -ItemType file -ErrorAction SilentlyContinue | Out-Null}"
    ],
    "persist": [
        "Lib",
        "AutoHotkey.ahk"
    ],
    "checkver": {
        "url": "https://www.autohotkey.com/download/1.1/version.txt",
        "regex": "(1\\.1\\.[\\d.]+)"
    },
    "autoupdate": {
        "url": "https://www.autohotkey.com/download/1.1/AutoHotkey_$version.zip",
        "hash": {
            "url": "https://www.autohotkey.com/download/1.1/AutoHotkey_$version.zip.sha256"
        }
