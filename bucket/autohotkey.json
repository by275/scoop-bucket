    "hash": "4482dbfe5481cc4fa8efb42bc9b24801c842cf7102608c0503bf198a627af6a2",
    "architecture": {
        "64bit": {
            "bin": [
                "autohotkeyu64.exe",
                [
                    "autohotkeyu64.exe",
                    "autohotkey"
                ],
                "compiler\\ahk2exe.exe"
            ],
            "post_install": [
                "Copy-Item \"$dir\\Compiler\\Unicode 64-bit.bin\" \"$dir\\Compiler\\AutoHotkeySC.bin\""
            ]
        },
        "32bit": {
            "bin": [
                "autohotkeyu32.exe",
                [
                    "autohotkeyu32.exe",
